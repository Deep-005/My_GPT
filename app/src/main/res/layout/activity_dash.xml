<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:layout_height="match_parent"
    tools:context=".Activities.DashActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@drawable/scroll">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingClass">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/db"
                    android:textSize="55sp"
                    android:textStyle="bold"
                    android:textColor="#02518F"
                    android:textAlignment="center"
                    android:fontFamily="@font/four"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#02518F"
                    android:layout_marginHorizontal="30dp"
                    android:layout_below="@id/header"
                    android:layout_marginTop="-15dp"/>

                <LinearLayout
                    android:id="@+id/cards"
                    android:layout_below="@id/header"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="15dp"
                    android:background="@drawable/cards_bg">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        android:background="@color/white"
                        android:elevation="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tt"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/usage"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="30dp"/>



                        <TextView
                            android:id="@+id/tCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="#F3A42F"
                            android:textStyle="bold"
                            android:text="@string/zero"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="30dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="28dp"
                            android:layout_marginHorizontal="20dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="25dp"
                            android:layout_marginHorizontal="20dp"/>

                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        android:background="@color/white"
                        android:elevation="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/image"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/usage"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="30dp"/>

                        <TextView
                            android:id="@+id/iCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="#F3A42F"
                            android:textStyle="bold"
                            android:text="@string/zero"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="30dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="28dp"
                            android:layout_marginHorizontal="20dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="25dp"
                            android:layout_marginHorizontal="20dp"/>

                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        android:background="@color/white"
                        android:elevation="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sum"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/usage"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="30dp"/>

                        <TextView
                            android:id="@+id/sCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="#F3A42F"
                            android:textStyle="bold"
                            android:text="@string/zero"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="30dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="28dp"
                            android:layout_marginHorizontal="20dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="25dp"
                            android:layout_marginHorizontal="20dp"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSlider"
                    android:layout_below="@id/cards"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="15dp"
                    app:iss_auto_cycle="true"
                    app:iss_corner_radius="35"
                    app:iss_period="2500"
                    app:iss_delay="0" />

                <TextView
                    android:id="@+id/abtText"
                    android:layout_below="@id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dash_about"
                    android:textColor="#012039"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:singleLine="false"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_20sdp"/>


            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawerNavigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/menu_bg"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_nav_header"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawer_nav_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>